<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/locomotive-scroll@3.5.4/dist/locomotive-scroll.css">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: gilroy;
      color: white;

    }

    body,
    html {
      width: 100%;
      height: 100%;
      background-color: black;
    }

    #main {


      position: relative;
      /* overflow: hidden; */
    }

    #center {
      width: 100%;
      /* height: 100vh; */
      /* background-color: lightseagreen; */
      display: flex;
      gap: 10px;

      position: relative;
      /* overflow: hidden; */
    }

    .left {
      width: 20.4vw;
      /* top: 10px; */
      position: fixed;
      height: 96vh;
      left: 10px;
      border-radius: 10px;
      /* background-color: darkgoldenrod; */

      overflow: hidden;
    }

    .over-top {

      width: 100%;
      border-radius: 10px;
      overflow: hidden;
      height: 19vh;
      background-color: #121212;
    }


    .over-top a {
      width: 90%;
      height: 60px;
      border-radius: 10px;
      text-decoration: none;
      border: none;
      background-color: transparent;
      text-align: start;
      display: flex;
      margin-top: 4px;
      padding: 0 10px;
      align-items: center;
      font-size: 1.5vw;
      gap: 10px;
      transition: all ease 0.4s;
    }

    .over-top a:hover {
      background-color: #5f5656;
    }

    .over-top button:hover {
      background-color: #5f5656;
    }

    .over-top button {
      width: 90%;
      height: 60px;
      border-radius: 10px;
      border: none;
      background-color: transparent;
      text-align: start;
      display: flex;
      margin-top: 4px;
      padding: 0 10px;
      align-items: center;
      font-size: 1.5vw;
      gap: 10px;
      transition: all ease 0.4s;

    }

    .over-bottom {
      width: 100%;
      border-radius: 10px;
      overflow: hidden;
      height: 10vh;
      /* background-color: #121212; */
      /* background-color: red; */
      margin-top: 10px;

    }

    .over-bottom a {
      width: 90%;
      height: 60px;
      border-radius: 10px;
      border: none;
      background-color: transparent;
      text-align: start;
      display: flex;
      text-decoration: none;
      margin-top: 10px;
      padding: 0 10px;
      align-items: center;
      font-size: 1.5vw;
      gap: 10px;
      transition: all ease 0.4s;


    }

    .over-bottom a:hover {
      background-color: #5f5656;
    }


    .over-bottom i {
      /* background-color: red; */
      background: linear-gradient(120deg, #5A2FEF, #d3deea);
      padding: 11px 11px;
      border-radius: 4px;
    }

    .left .playlist {
      display: flex;
      align-items: center;
      gap: 25px;
      padding-top: -4px;
      width: 11vw;
      height: 5.5vh;
      border-radius: 50px;
      background-color: #2A2A2A;

      padding-left: 2vw;

      margin-top: 2vw;
    }

    .playlist p {
      font-size: 18px;
      font-weight: 500;
      cursor: pointer;
    }

    .playlist i {
      font-size: 19px;
      cursor: pointer;
    }



    .newplaylist {
      cursor: pointer;
      width: 100%;
      height: 45%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      /* justify-content: space-between; */
      padding: 16px;
      margin-top: 0.7vw;
      overflow-y: auto;
      /* border: 1px solid white; */
      border-radius: 10px;


      opacity: 0;
      background-color:#282828;
    }

    .newplaylist input {
      width: 130%;
      height: 6vh;
      border-radius: 50px;
      padding-left: 10px;
      background-color: transparent;
      border: 1px solid white;


    }

    #submit-form {
      position: absolute;
      left: 81%;
      font-size: 18px;
      padding: 10px 10px;
      /* background-color: #1FDF64; */
      border-radius: 50px;
      border: 1px solid white;

      top: 46%;
    }

    #submit-form:hover {
      background: linear-gradient(120deg, #5A2FEF, #d3deea);

    }

    .newplaylist::-webkit-scrollbar {
      display: none;
    }

    .newplaylist .text2 {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .newplaylist .text2 h5 {
      padding-right: 8px;
      /* background-color: red; */
      width: 17vw;
      height: 6vh;
      border-radius: 6px;
      margin-top: 10px;
      padding: 10px 30px;
    }

    .newplaylist .text2 h5:hover {
      background-color: #5F5656;
    }

    .newplaylist .text2 h5 a {
      font-size: 20px;
      font-weight: 500;

      margin-left: 5px;
      text-decoration: none;
    }

    .newplaylist .text2 h5 i {
      font-weight: 500;
      font-size: 17px;
      color: #23C05B;

    }


    .nav-right {
      width: 77%;
      height: 70px;
      background-color: rgba(0, 0, 0, 0.351);
      position: fixed;
      display: flex;
      align-items: center;

      justify-content: space-between;

      z-index: 9999999;
    }

    .ll {
      width: 100px;

    }

    .ll i {
      margin-left: 5px;
      font-size: 25px;
      border-radius: 50px;
      padding: 7px 7px;
      background-color: rgb(60, 58, 58);
    }

    .rr {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .nav-right img {
      height: 45px;
      width: 45px;
      border-radius: 50px;
      object-fit: cover;


    }

    .nav-right h4 {
      color: white;
      font-size: 20px;

    }

    .right {
      width: 77%;
      /* height: 100%; */
      background-color: #161616;
      display: flex;
      position: relative;
      position: absolute;
      right: 5px;

      flex-wrap: wrap;
      margin: 7px;
      overflow: hidden;
      border-radius: 10px;

    }

    .musics {   
      display: grid;
      margin-top: 5vw;

      width: 100%;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));

    }

    .right::-webkit-scrollbar {
      display: none;

    }


    .card {
      /* background-color: #323030; */
      height: fit-content;
      background-color: #272727;
      width: fit-content;
      padding: 7px;
      border-radius: 7px;
      margin: 9px;
      position: relative;
      cursor: pointer;
      transition: all ease 0.2s;

    }

    .card:hover {
      background-color: #3c3b3b;
    }

    .card .text h5,
    .card .text p {
      max-width: 150px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    .card img {
      width: 100%;
      /* height: 150px; */
      object-fit: cover;

    }

    .playButton {
      position: absolute;
      top: 60%;
      left: 80%;
      font-size: 50px;
      cursor: pointer;
      transition: all ease 0.3s;
      opacity: 0;

    }

    .card:hover .playButton {
      opacity: 1;
    }

    .playButton i {
      color: green;
    }


    .text i {
      font-size: 2vw;
      margin-left: 5vw;
      margin-top: 2vw;
    }

    .text a {
      text-decoration: none;
      font-size: 1.5vw;

    }

    .bod{
      display: flex;
      align-items: center;
      justify-content: space-between;
    }


    .right audio {
      position: fixed;
      width: 40vw;
      height: 26vh;
      top: 70%;

      left: 62%;

      transform: translate(-50%, 0%);
    }

    .right audio::-webkit-media-controls-panel {
      background-color: #1FDF64;
      color: #a0276e;
    }

    .over-logout {
      width: 80%;
      /* background-color: red; */
      position: absolute;
      top: 89%;
      left: 10px;
    }

    .over-logout a {
      width: 90%;
      height: 60px;
      border-radius: 10px;
      border: none;
      background-color: transparent;
      text-align: start;
      display: flex;
      text-decoration: none;
      margin-top: 10px;
      padding: 0 10px;
      align-items: center;
      font-size: 1.5vw;
      gap: 10px;
      transition: all ease 0.4s;


    }

    .over-logout a:hover {
      background-color: #5f5656;
    }


    .over-logout i {
      /* background-color: red; */
      background: linear-gradient(120deg, #5A2FEF, #d3deea);
      padding: 10px 10px;
      border-radius: 4px;
    }

    .dropbtn {
      font-size: 12px;
      color: white;
      font-size: 16px;
      border: none;
      cursor: pointer;
      background-color: transparent;
    }

    .dropbtn:hover {
      color: #1ED760;
    }

    .dropdown {
      position: relative;
      display: inline-block;
    }

    .dropdown-content {
      display: none;
      position: absolute;
      min-width: 160px;
      max-height: 160px;
      box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
      z-index: 1;
      background-color: #121212;
      overflow-y: auto;
    }

    .dropdown-content::-webkit-scrollbar {
      display: none;
    }

    .dropdown-content a {
      color: white;
      padding: 12px 16px;
      text-decoration: none;
      display: block;
      font-size: 16px;
    }

    .dropdown-content a:hover {
      background-color: #333333;
    }

    .dropdown:hover .dropdown-content {
      display: block;
    }

    @media (max-width:600px) {

      .center{
        flex-direction: column;
        position: relative;

      }
      



      .left{
        width: 100vw;
        height: 35vh;

        left: 0;
        
        /* background-color: red; */
      }

      .over-top{
        background-color: rgb(53, 52, 52);
        height: 10vh;
      }

      .over-top a{
        background-color:rgb(69, 68, 68);
        position: absolute;
        width: 15%;
        left: 18%;
        height: 50px;
      
        font-size: 4vw;


      }
      .over-top a i{
        font-size: 8vw;
      }

      .over-top a p{
        display: none;
      }

      .over-top button{
        position: absolute;
          width: 15%;
          height:50px;
          /* left: 50%; */
          background-color:rgb(69, 68, 68);
      }

      .over-top button i{
        font-size: 8vw;
      }
      .over-top button p{
        display: none;
      }

      .over-bottom{
        width: 19%;
        height:9vh;
        position: absolute;
        top: -1%;
        left: 37%;
      }

      .over-bottom i{
        position: absolute;
        top: -1px;
        font-size: 7vw;
      }
      .over-bottom a p{
        display: none;
      }

      .over-logout{
        position:absolute;
        top: -3vw;
        height: 20px;
        left: 80%;
        width: 19%;

      }
      .over-logout p{
        display: none;
      }
      .over-logout i{

        font-size: 7vw;
      }

      .text2{
        width: 100%;

        
      }

      .text2 h5{
        margin-top: 5px;
        width: 10vw;
      }

      .text2 a{
        font-size: 15px;
      }
      .text2 h5 i{
        font-size: 14px;
      }

      .newplaylist{
        background-color: lightseagreen;
        /* position: absolute; */
      /* opacity: 1; */
        /* top: 60%; */
        z-index: 99999;
        width: 100%;
        height: 50%;
      }

      .right{
        /* display: none; */
        width: 100%;
        position: absolute;
        right: 0px;
        margin-top:60vw;
        
      }
      .center{
        position: relative;
      }

      

      .nav-right{
        width: 100%;
        position: absolute;
      }

      .right audio {
        width: 94vw;
        left: 48%;
      }

      
      
    }





  </style>
</head>

<body>

  <div id="main">

    <div id="center">
      <div class="left">

        <div class="over-top">
          <button>
            <i class="ri-home-5-fill"></i>
            <p>Home</p>
          </button>
          <a href="/search">
            <i class="ri-search-line"></i>
            <p>Search</p>
          </a>

        </div>

        <div class="over-bottom">

          <a href="/likedMusic">
            <i class="ri-heart-fill"></i>
            <p>Liked Songs</p>

          </a>
        </div>


        <a id="add">
          <div class="playlist">
            <i class="ri-play-list-line"></i>

            <p class="left-text">Playlist</p>

          </div>

        </a>

        <div class="newplaylist">
          <form action="/createplaylist" id="playlistform" method="post">
            <input type="text" name="playlistName" placeholder="Add Playlist">
            <i id="submit-form" class="ri-add-line"></i>

          </form>
          <% currentUser.playlist.forEach(function(playlist){ %>

            <div class="text2">
              <h5>
                <i class="ri-music-2-line"></i>
                <a href="PlayList/<%= playlist._id %>">
                  <%= playlist.name %>
                </a>
              </h5>

            </div>

            <% }) %>
        </div>



        <div class="over-logout">
          <a href="/logout">
            <i class="ri-logout-circle-line"></i>
            <p>Logout</p>
          </a>
        </div>

      </div>




      <div class="right">
        <div class="nav-right">
          <div class="ll">
            <i class="ri-arrow-left-s-line"></i>
            <i class="ri-arrow-right-s-line"></i>
            
          </div>

          <div class="rr">

            <h4>
              <%= currentUser.username %>
            </h4>
            <img src="../images/green.png" alt="">
          </div>
        </div>



        <div class="musics">


          <% currentUser.playlist[0].songs.forEach(song=> { %>

            <div class="card" onclick="songcardClicked('<%= song.fileName %>')">
              <img src="/poster/<%= song.poster %>" alt="">

              <div class="text">
                <h5>
                  <%= song.title %>
                </h5>
                <p>
                  <%= song.artist %>

                </p>


                <div class="bod">

                  <div class="dropdown">
                    <button class="dropbtn">Add to playlist</button>
                    <div class="dropdown-content">
                      <% currentUser.playlist.forEach(function(playlist){ %>
  
                        <a href="/AddPlayList/<%= playlist._id %>/<%= song._id %>">
                          <%= playlist.name %>
                        </a>
                        <% }) %>
                    </div>
                  </div>
                  <a class="like" href="/likeMusic/<%= song._id %>">
  
                    <%= song.likes.indexOf(currentUser.id)===-1 ? "ðŸ¤" : "ðŸ’š" %>
  
                  </a>
                </div>

              </div>

              <div class="playButton">
                <i class="ri-play-circle-fill"></i>

              </div>
            </div>

            <% }) %>

        </div>


        <audio src="" controls></audio>
      </div>
    </div>


  </div>


  <script>
    function songcardClicked(filename) {
      document.querySelector('audio').setAttribute('src', `/stream/${filename}`)
      document.querySelector('audio').play()
    }



    var flag1 = true
    document.querySelector("#add").addEventListener("click", function () {
      if (flag1) {
        document.querySelector(".newplaylist").style.opacity = 1;
        flag1 = false
      }
      else {
        document.querySelector(".newplaylist").style.opacity = 0
        flag1 = true
      }
    })

    document.querySelector("#submit-form").addEventListener("click", function () {
      document.querySelector("#playlistform").submit();
    })

  </script>



</body>

</html>