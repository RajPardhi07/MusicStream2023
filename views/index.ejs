<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/locomotive-scroll@3.5.4/dist/locomotive-scroll.css">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: gilroy;
      color: white;

    }

    body,
    html {
      width: 100%;
      height: 100%;
      background-color: black;
    }

    #main {
     

      position: relative;
      /* overflow: hidden; */
    }

    #center {
      width: 100%;
      /* height: 100vh; */
      /* background-color: lightseagreen; */
      display: flex;
      gap: 10px;

      position: relative;
      /* overflow: hidden; */
    }

    .left {
      width: 20.4vw;
      /* top: 10px; */
      position: fixed;
      height: 96vh;
      left: 10px;
      border-radius: 10px;
      /* background-color: darkgoldenrod; */

      overflow: hidden;
    }

    .over-top {

      width: 100%;
      border-radius: 10px;
      overflow: hidden;
      height: 19vh;
      background-color: #121212;
    }


    .over-top a {
      width: 90%;
      height: 60px;
      border-radius: 10px;
      text-decoration: none;
      border: none;
      background-color: transparent;
      text-align: start;
      display: flex;
      margin-top: 4px;
      padding: 0 10px;
      align-items: center;
      font-size: 1.5vw;
      gap: 10px;
      transition: all ease 0.4s;
    }

    .over-top a:hover{
      background-color: #5f5656;
    }

    .over-top button:hover{
      background-color: #5f5656;
    }
    .over-top button {
      width: 90%;
      height: 60px;
      border-radius: 10px;
      border: none;
      background-color: transparent;
      text-align: start;
      display: flex;
      margin-top: 4px;
      padding: 0 10px;
      align-items: center;
      font-size: 1.5vw;
      gap: 10px;
      transition: all ease 0.4s;

    }

    .over-bottom{
      width: 100%;
      border-radius: 10px;
      overflow: hidden;
      height: 90vh;
      background-color: #121212;
      margin-top: 10px;

    }

    .over-bottom button {
      width: 90%;
      height: 60px;
      border-radius: 10px;
      border: none;
      background-color: transparent;
      text-align: start;
      display: flex;
      margin-top: 10px;
      padding: 0 10px;
      align-items: center;
      font-size: 1.5vw;
      gap: 10px;
      transition: all ease 0.4s;


    } 
    .over-bottom button:hover{
      background-color: #5f5656;
    }


    .over-bottom i{
      /* background-color: red; */
      background: linear-gradient( 120deg, #5A2FEF,#d3deea);
      padding: 11px 11px;
      border-radius: 4px;
    }


    .right {
      width: 77%;
      /* height: 100%; */
      background-color: #161616;
      display: flex;
      position: relative;
      position: absolute;
      right: 5px;

      flex-wrap: wrap;
      margin: 7px;
      overflow: hidden;
      border-radius: 10px;

    }

    .musics {
      display: grid;
      width: 100%;
      /* margin-top: 5vw; */
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));

    }


    .card {
      /* background-color: #323030; */
      height: fit-content;
      background-color: #272727;
      width: fit-content;
      padding: 7px;
      border-radius: 7px;
      margin: 9px;
      position: relative;
      cursor: pointer;
      transition: all ease 0.2s;

    }

    .card:hover {
      background-color: #3c3b3b;
    }

    .card .text h5,
    .card .text p {
      max-width: 150px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    .card img {
      width: 100%;
      /* height: 150px; */
      object-fit: cover;

    }

    .playButton {
      position: absolute;
      top: 60%;
      left: 80%;
      font-size: 50px;
      cursor: pointer;
      transition: all ease 0.3s;
      opacity: 0;

    }

    .card:hover .playButton {
      opacity: 1;
    }

    .playButton i {
      color: green;
    }


    .text i {
      font-size: 2vw;
      margin-left: 5vw;
      margin-top: 2vw;
    }

    .right audio {
      position: fixed;
      width: 40vw;
      height: 26vh;
      top: 70%;

      left: 62%;

      transform: translate(-50%, 0%);
    }

    .right audio::-webkit-media-controls-panel {
      background-color: #1FDF64;
      color: #a0276e;
    }
  </style>
</head>

<body>




  <div id="main">

    <div id="center">

      
          <div class="left">
      
            <div class="over-top">
              <button>
                <i class="ri-home-5-fill"></i>
                <p>Home</p>
              </button>
              <a href="/search">
                <i class="ri-search-line"></i>
                <p>Search</p>
              </a>
      
            </div>

            <div class="over-bottom">



              <button>
                <i class="ri-heart-fill"></i>
                <p>Liked Songs</p>
              </button>
            </div>
      
          </div>
      
          <div class="right">
      
      
      
            <div class="musics">
      
      
              <% currentUser.playlist[0].songs.forEach(song => { %>
      
                <div class="card" onclick="songcardClicked('<%= song.fileName %>')">
                  <img src="/poster/<%= song.poster %>" alt="">
      
                  <div class="text">
                    <h5>
                      <%= song.title %>
                    </h5>
                    <p>
                      <%= song.artist %>
      
                    </p>
                    <!-- <p>
                        <%= song.album %>
                      </p> -->
      
                    <i class="ri-heart-line"></i>
                  </div>
      
                  <div class="playButton">
                    <i class="ri-play-circle-fill"></i>
      
                  </div>
                </div>
      
                <% }) %>
      
            </div>
      
      
            <audio src="" controls></audio>
          </div>
    </div>


  </div>


  <!-- <script src="https://cdn.jsdelivr.net/npm/locomotive-scroll@3.5.4/dist/locomotive-scroll.js"></script> -->
  <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js" integrity="sha512-Ic9xkERjyZ1xgJ5svx3y0u3xrvfT/uPkV99LBwe68xjy/mGtO+4eURHZBW2xW4SZbFrF1Tf090XqB+EVgXnVjw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script> -->
  <script>
    function songcardClicked(filename) {
      document.querySelector('audio').setAttribute('src', `/stream/${filename}`)
      document.querySelector('audio').play()
    }


  </script>



</body>

</html>