<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">

  <title>Document</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: gilroy;

    }

    body,
    html {
      width: 100%;
      height: 100%;

    }

    #main {
      width: 100%;
      height: 100vh;
      background-color: black;
      display: flex;
      gap: 10px;
      overflow: hidden;
      position: relative;
    }

    .left {
      width: 25%;
      border-radius: 9px;
      height: 81%;
      background-color: #121212;
    }

    .over-top {

      width: 96%;
      margin-top: 10px;
      border-radius: 10px;
      overflow: hidden;
      margin-left: 7px;
      height: 20vh;
      color: white;
      background-color: #121212;
    }


    .over-top a {
      width: 90%;
      height: 60px;
      border-radius: 10px;
      text-decoration: none;
      border: none;
      background-color: transparent;
      text-align: start;
      display: flex;
      margin-left: 16px;

      margin-top: 4px;
      padding: 0 10px;
      align-items: center;
      color: white;
      font-size: 1.5vw;
      gap: 10px;
      transition: all ease 0.4s;
    }

    .over-top a:hover {
      background-color: #5f5656;
    }

    .over-top button:hover {
      background-color: #5f5656;
    }

    .over-top button {
      width: 90%;
      height: 60px;
      border-radius: 10px;
      border: none;
      background-color: transparent;
      text-align: start;
      display: flex;
      margin-left: 16px;
      margin-top: 4px;
      color: white;
      padding: 0 10px;
      align-items: center;
      font-size: 1.5vw;
      gap: 10px;
      transition: all ease 0.4s;

    }


    .left input {
      width: 20vw;
      height: 7vh;
      font-size: 16px;
      font-weight: 500;
      color: #6C6C6C;
      border-radius: 50px;
      margin-left: 0.5vw;
      border: 2px solid white;
      background-color: #2A2A2A;
      margin-top: 1vw;
      padding-left: 10px;
    }

    .bot button {
      width: 3vw;
      font-size: 19px;
      height: 6vh;
      color: white;
      border-radius: 6px;
      background-color: #2A2A2A;
      border: 1px solid white;
      transition: all ease 0.2s;
      margin-left: 0.5vw;

    }

    .bot button:hover {
      background-color: #1ED760;

    }

    .right {
      width: 75%;
      height: 81%;
      border-radius: 9px;
      background: linear-gradient(to bottom, #5840a9, #1A152A);

    }

    .pro {
      display: flex;
      align-items: center;
      width: 100%;
      height: 30vh;
      /* background-color: #881c1c; */
    }

    .pro i {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 22vh;
      font-size: 6vw;
      height: 22vh;
      border-radius: 8px;
      color: white;
      margin-top: 1vw;
      margin-left: 2vw;
      background: linear-gradient(120deg, #5A2FEF, #d3deea);

    }

    .pro h1 {
      color: white;
      letter-spacing: -2px;
      font-size: 6.4vw;
      margin-left: 1.5vw;
    }

    .pro h5 {
      color: white;
      font-size: 16px;
      font-weight: 500;
      margin-left: 1.5vw;

    }


    .nav-bottom {
      width: 100%;
      height: 100px;
      background-color: #121212;
      position: absolute;
      bottom: 20px;
    }

    .nav-bottom img {
      height: 60px;
      margin-left: 2vw;
      border-radius: 5px;
      object-fit: cover;
    }

    .nav-bottom h4 {
      color: white;
      margin-left: 1vw;
      font-weight: 500;
    }

    .nav-bottom h5 {
      color: white;
      margin-left: 1vw;

      font-weight: 500;
    }

    audio {
      width: 40vw;

      position: fixed;
      bottom: 3vw;
      z-index: 99999999;
      left: 30%;
    }

    .musics {
      display: grid;
      width: 100%;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));

    }


    .song {
      /* background-color: #323030; */
      height: fit-content;
      background-color: #272727;
      width: fit-content;
      padding: 7px;
      border-radius: 7px;
      margin: 9px;
      position: relative;
      cursor: pointer;
      transition: all ease 0.2s;

    }

    .song:hover {
      background-color: #3c3b3b;
    }

    .song .text h5,
    .song .text p {
      max-width: 150px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    .song img {
      width: 100%;
      /* height: 150px; */
      object-fit: cover;

    }

    .playButton {
      position: absolute;
      top: 60%;
      left: 80%;
      font-size: 50px;
      cursor: pointer;
      transition: all ease 0.3s;
      /* opacity: 0; */

    }

    .song:hover .playButton {
      opacity: 1;
    }

    .playButton i {
      color: green;
    }

    .over-bottom {
      width: 100%;
      border-radius: 10px;
      overflow: hidden;
      height: 20vh;
      background-color: #121212;
      margin-top: 10px;

    }

    .over-bottom a {
      width: 80%;
      height: 60px;
      border-radius: 10px;
      border: none;
      text-decoration: none;

      background-color: transparent;
      text-align: start;
      display: flex;
      margin-top: 10px;
      padding: 0 10px;
      margin-left: 1vw;
      color: white;
      align-items: center;
      font-size: 1.4vw;
      gap: 10px;
      transition: all ease 0.4s;


    }

    .over-bottom a:hover {
      background-color: #5f5656;
    }


    .over-bottom i {
      /* background-color: red; */
      background: linear-gradient(120deg, #5A2FEF, #d3deea);
      padding: 11px 11px;
      border-radius: 4px;
    }


    .text i {
      font-size: 2vw;
      margin-left: 5vw;
      margin-top: 2vw;
    }



    .card2 {
      width: 250px;

      margin-left: 1.5vw;
      margin-top: 10px;
      display: flex;
      height: 100%;

    }

    .card2 img {
      height: 80px;
      object-fit: cover;

    }

    .text2 h5,
    .text2 p {
      font-size: 16px;
      color: white;
      margin-left: 1vw;

    }

    .nav-bottom audio::-webkit-media-controls-panel {
      background-color: #1FDF64;
      color: #a0276e;
    }
  </style>
</head>

<body>

  <div id="main">


    <div class="left">

      <div class="over-top">

        <a href="/">

          <i class="ri-home-5-fill"></i>
          <p>Home</p>
        </a>
        <a href="/search">
          <i class="ri-search-line"></i>
          <p>Search</p>
        </a>

      </div>

      <div class="bot">
        <input type="text" placeholder="What do you want to listen?">

        <button onclick="searchSong()"><i class="ri-search-line"></i></button>
      </div>

      <div class="over-bottom">

        <a href="/likedMusic">
          <i class="ri-heart-fill"></i>
          <p>Liked Songs</p>

        </a>
      </div>



    </div>

    <div class="right">

      <div class="pro">
        <i class="ri-search-line"></i>
        <div class="pro-data">
          <h5>Playlist</h5>
          <h1>Search Songs</h1>
        </div>

      </div>


      <div class="musics">

        
      </div>
    </div>
    
    <div class="nav-bottom">
      
      <img src="posterName" alt="">
      
      <div class="nav-c">
        <h4 class="songName"></h4>
        <h5 class="artistName"></h5>
      </div>
      
      <audio src="" controls></audio>


    </div>

  </div>

  </div>



  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.5.1/axios.min.js"
    integrity="sha512-emSwuKiMyYedRwflbZB2ghzX8Cw8fmNVgZ6yQNNXXagFzFOaQmbvQ1vmDkddHjm5AITcBIZfC7k4ShQSjgPAmQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <script>

async function searchSong() {
      const result = await axios.post('/search', {
        search: document.querySelector('input').value
      })

      let clutter = ''

      result.data.songs.forEach(song => {
        clutter += ` <div class="song" onclick="songCardClicked('${song.fileName}')">
          <img src="/poster/${song.poster}" alt="">
          <div class="text">
            <h5>${song.title}</h5>
            <p> ${song.artist}</p>
            <p> ${song.album}</p>
          </div>
          <div class="playButton">
            <i class="ri-play-circle-fill"></i>
          </div>
        </div>`
      });

      document.querySelector('.musics').innerHTML = clutter



    }

    function songCardClicked(filename) {
      document.querySelector('audio').setAttribute('src', `/stream/${filename}`)
      document.querySelector('audio').play()
    }
    
  </script>

</body>

</html>