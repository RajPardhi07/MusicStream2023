<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">

  <title>Document</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: gilroy;

    }

    body,
    html {
      width: 100%;
      height: 100%;

    }

    #main {
      width: 100%;
      height: 100vh;
      background-color: black;
      display: flex;
      gap: 10px;
      overflow: hidden;
      position: relative;
    }

    .left {
      width: 25%;
      border-radius: 9px;
      height: 81%;
      background-color: #121212;
    }

    .over-top {

      width: 96%;
      margin-top: 10px;
      border-radius: 10px;
      overflow: hidden;
      margin-left: 7px;
      height: 20vh;
      color: white;
      background-color: #121212;
    }


    .over-top a {
      width: 90%;
      height: 60px;
      border-radius: 10px;
      text-decoration: none;
      border: none;
      background-color: transparent;
      text-align: start;
      display: flex;
      margin-left: 16px;

      margin-top: 4px;
      padding: 0 10px;
      align-items: center;
      color: white;
      font-size: 1.5vw;
      gap: 10px;
      transition: all ease 0.4s;
    }

    .over-top a:hover {
      background-color: #5f5656;
    }

    .over-top button:hover {
      background-color: #5f5656;
    }

    .over-top button {
      width: 90%;
      height: 60px;
      border-radius: 10px;
      border: none;
      background-color: transparent;
      text-align: start;
      display: flex;
      margin-left: 16px;
      margin-top: 4px;
      color: white;
      padding: 0 10px;
      align-items: center;
      font-size: 1.5vw;
      gap: 10px;
      transition: all ease 0.4s;

    }


    .left input {
      width: 20vw;
      height: 7vh;
      font-size: 16px;
      font-weight: 500;
      color: #6C6C6C;
      border-radius: 50px;
      margin-left: 0.5vw;
      border: 2px solid white;
      background-color: #2A2A2A;
      margin-top: 1vw;
      padding-left: 10px;
    }

    .bot button {
      width: 3vw;
      font-size: 19px;
      height: 6vh;
      color: white;
      border-radius: 6px;
      background-color: #2A2A2A;
      border: 1px solid white;
      transition: all ease 0.2s;
      margin-left: 0.5vw;

    }

    .bot button:hover {
      background-color: #1ED760;

    }

    .right {
      width: 75%;
      height: 81%;
      border-radius: 9px;
      background: linear-gradient(to bottom, #4fa7da,#122f42c8);

    }
    .pro {
      display: flex;
      align-items: center;
      width: 100%;
      height: 30vh;
      /* background-color: #881c1c; */
    }

    .pro i {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 22vh;
      font-size: 6vw;
      height: 22vh;
      border-radius: 8px;
      color: white;
      margin-top: 1vw;
      margin-left: 2vw;
      background: linear-gradient(120deg, #5A2FEF, #d3deea);

    }

    .pro h1 {
      color: white;
      letter-spacing: -2px;
      font-size: 6.4vw;
      margin-left: 1.5vw;
    }

    .pro h5 {
      color: white;
      font-size: 16px;
      font-weight: 500;
      margin-left: 1.5vw;

    }



    .nav-bottom {
      width: 100%;
      height: 100px;
      background-color: #121212;
      position: absolute;
      bottom: 20px;
    }

    .nav-bottom img {
      height: 60px;
      margin-left: 2vw;
      border-radius: 5px;
      object-fit: cover;
    }

    .nav-bottom h4 {
      color: white;
      margin-left: 1vw;
      font-weight: 500;
    }

    .nav-bottom h5 {
      color: white;
      margin-left: 1vw;

      font-weight: 500;
    }

    audio {
      width: 40vw;

      position: fixed;
      bottom: 3vw;
      z-index: 99999999;
      left: 30%;
    }

    .musics {
      display: grid;
      width: 100%;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));

    }


    .song {
      /* background-color: #323030; */
      height: fit-content;
      background-color: #272727;
      width: fit-content;
      padding: 7px;
      border-radius: 7px;
      margin: 9px;
      position: relative;
      cursor: pointer;
      transition: all ease 0.2s;

    }

    .song:hover {
      background-color: #3c3b3b;
    }

    .song .text h5,
    .song .text p {
      max-width: 150px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      color: lightgray;
      margin-top: 7px;
    }

    .song img {
      width: 100%;
      /* height: 150px; */
      object-fit: cover;

    }

    .playButton {
      position: absolute;
      top: 60%;
      left: 80%;
      font-size: 50px;
      cursor: pointer;
      transition: all ease 0.3s;
      /* opacity: 0; */

    }

    .song:hover .playButton {
      opacity: 1;
    }

    .playButton i {
      color: green;
    }

    .over-bottom {
      width: 100%;
      border-radius: 10px;
      overflow: hidden;
      height: 11vh;
      background-color: #121212;
      margin-top: 10px;

    }

    .over-bottom a {
      width: 80%;
      height: 60px;
      border-radius: 10px;
      border: none;
      text-decoration: none;

      background-color: transparent;
      text-align: start;
      display: flex;
      margin-top: 10px;
      padding: 0 10px;
      margin-left: 1vw;
      color: white;
      align-items: center;
      font-size: 1.4vw;
      gap: 10px;
      transition: all ease 0.4s;


    }

    .over-bottom a:hover {
      background-color: #5f5656;
    }


    .over-bottom i {
      /* background-color: red; */
      background: linear-gradient(120deg, #5A2FEF, #d3deea);
      padding: 11px 11px;
      border-radius: 4px;
    }


    .text i {
      font-size: 2vw;
      margin-left: 5vw;
      margin-top: 2vw;
    }



    .card2 {
      width: 250px;

      margin-left: 1.5vw;
      margin-top: 10px;
      display: flex;
      height: 100%;

    }

    .card2 img {
      height: 70px;
      object-fit: cover;

    }

    .left .playlist {
      display: flex;
      align-items: center;
      gap: 25px;
      padding-top: -4px;
      width: 11vw;
      height: 5.5vh;
      border-radius: 50px;
      /* background-color: #2A2A2A; */
      background-color:#2A2A2A;

      padding-left: 2vw;

      
    }

    .playlist p {
      font-size: 18px;
      font-weight: 500;
      cursor: pointer;
      color: white;
    }

    .playlist i {
      font-size: 19px;
      cursor: pointer;
      color: white;

    }



    .newplaylist {
      cursor: pointer;
      width: 100%;
      height: 40%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      /* justify-content: space-between; */
      padding: 16px;
      margin-top: 0.7vw;
      overflow-y: auto;
      /* border: 1px solid white; */
      border-radius: 10px;


      /* opacity: 0; */
      background-color:rgb(46, 45, 45);
    }

    .newplaylist input {
      width: 130%;
      height: 6vh;
      border-radius: 50px;
      padding-left: 10px;
      background-color: transparent;
      border: 1px solid white;


    }

    #submit-form {
      position: absolute;
      left: 81%;
      font-size: 18px;
      padding: 10px 10px;
      /* background-color: #1FDF64; */
      border-radius: 50px;
      border: 1px solid white;

      top: 46%;
    }

    #submit-form:hover {
      background: linear-gradient(120deg, #5A2FEF, #d3deea);

    }

    .newplaylist::-webkit-scrollbar {
      display: none;
    }

    .newplaylist .text2 {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .newplaylist .text2 h5 {
      padding-right: 8px;
      /* background-color: red; */
      width: 14vw;
      height: 6vh;
      border-radius: 6px;
      margin-top: 10px;
      padding: 10px 30px;
    }

    .newplaylist .text2 h5:hover {
      background-color: #5F5656;
    }

    .newplaylist .text2 h5 a {
      font-size: 20px;
      font-weight: 500;

      margin-left: 5px;
      text-decoration: none;
    }

    .newplaylist .text2 h5 i {
      font-weight: 500;
      font-size: 17px;
      color: #23C05B;

    }



    
  </style>
</head>

<body>

  <div id="main">


    <div class="left">

      <div class="over-top">

        <a href="/">

          <i class="ri-home-5-fill"></i>
          <p>Home</p>
        </a>
        <a href="/search">
          <i class="ri-search-line"></i>
          <p>Search</p>
        </a>

      </div>

      <div class="bot">
        <input type="text" placeholder="What do you want to listen?">

        <button onclick="searchSong()"><i class="ri-search-line"></i></button>
      </div>

      <div class="over-bottom">

        <a href="/likedMusic">
          <i class="ri-heart-fill"></i>
          <p>Liked Songs</p>

        </a>
      </div>
<!-- 
      <a class="add">
        <div class="playlist">
          <i class="ri-play-list-line"></i>
          <p class="left-text">PlayList</p>
        </div>
      </a>

      <div class="newplaylist">
        <form action="/createplaylist" id="playlistform" method="post">
          <input name="playlistName" type="text" placeholder="Add PlayList">
        </form>
        <div class="text2">
          <h5>
            <a href="/PlayList/<%= foundPlayList._id %>">
              <%= foundPlayList.name %>
            </a>
          </h5>
        </div>
      </div> -->



    </div>

    <div class="right">


      <div class="pro">
        <i class="ri-music-2-line"></i>
        <div class="pro-data">
          <h5>Playlist</h5>
          <h1>This Is <%= foundPlayList.name %></h1>
          
        </div>

      </div>


      


      <div class="musics">

        <% foundPlayList.songs.forEach(function(song){ %>
          <div class="song">
            <div class="image">
              <img src="/poster/<%= song.poster %>" alt="">
              <div class="playButton" onclick="songCardClick('<%= song.fileName %>')">
                <i class="ri-play-circle-fill"></i>
              </div>
            </div>
            <div class="text">
              <h5>
                <%= song.title %>
              </h5>
              <p>
                <%= song.artist %>
              </p>
              <!-- <p>
                <%= song.album %>
              </p> -->


            </div>
          </div>
          <% }) %>

      </div>
    </div>

    <div class="nav-bottom">

      

      <audio src="" controls></audio>


    </div>

  </div>

  </div>



  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.5.1/axios.min.js"
    integrity="sha512-emSwuKiMyYedRwflbZB2ghzX8Cw8fmNVgZ6yQNNXXagFzFOaQmbvQ1vmDkddHjm5AITcBIZfC7k4ShQSjgPAmQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <script>

async function searchSong() {
      const result = await axios.post('/search', {
        search: document.querySelector('.left .search input').value
      })
      let clutter = ''
      result.data.songs.forEach(song => {
        clutter += ` <div class="song" onclick="songCardClick('${song.fileName}')">
          <img src="/poster/${song.poster}" alt="">
          <div class="text">
            <h5>${song.title}</h5>
            <p> ${song.artist}</p>
            <p> ${song.album}</p>
          </div>
          <div class="playButton">
            <i class="ri-play-circle-fill"></i>
          </div>
        </div>`
      });
      document.querySelector('.musics').innerHTML = clutter
    }


    async function songCardClick(fileName) {
      
      document.querySelector('audio').setAttribute('src', `/stream/${fileName}`)
      document.querySelector('audio').play()
    }

    var flag1 = true
    document.querySelector("#add").addEventListener("click", function () {
      if (flag1) {
        document.querySelector(".newplaylist").style.opacity = 1;
        flag1 = false
      }
      else {
        document.querySelector(".newplaylist").style.opacity = 0
        flag1 = true
      }
    })

    document.querySelector("#submit-form").addEventListener("click", function () {
      document.querySelector("#playlistform").submit();
    })

  </script>

</body>

</html>